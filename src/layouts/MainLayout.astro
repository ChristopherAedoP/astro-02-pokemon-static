---
import { ViewTransitions } from 'astro:transitions';
import NavBar from '@components/shared/NavBar.astro';
//import ViewTransitions from 'astro/components/ViewTransitions.astro';
import { siteInfo } from 'src/consts/site-info';

interface Props {
	title?: string;
	image?: string;
	description?: string;
}
const {
	title = siteInfo.title,
	description = siteInfo.description,
	image,
} = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- SEO -->
		<meta name="description" content={description} />
		<meta name="author" content="Christopher Aedo" />

		<!-- OG Metatags -->
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:image" content={image} />

		<title>{title}</title>
		<!-- se comenta para user Zero-JavaScript View -->
		<ViewTransitions />
		<!-- si se comenta no funciona el siclo de vida de ViewTransitions  -->

		<!-- Zero-JavaScript View Transitions -->
		<!-- https://astro.build/blog/future-of-astro-zero-js-view-transitions/?tw -->
		<!-- <style>
			@view-transition {
				navigation: auto; /* enabled! */
			}
		</style> -->
	</head>
	<body class="bg-slate-800 text-slate-100 flex flex-col min-h-screen">
		<NavBar />
		<main class="mt-10 m-auto flex-grow w-full max-w-4xl px-2">
			<slot />
		</main>
	</body>
</html>
